<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="someBean" class="dev.mj.springtutorial.lesson11.SomeBean">
        <constructor-arg>
            <list>
                <value>one</value>
                <value>two</value>
                <value>three</value>
            </list>
        </constructor-arg>
        <constructor-arg>
            <set>
                <value>1</value>
                <value>2</value>
                <value>3</value>
            </set>
        </constructor-arg>
        <constructor-arg>
            <array>
                <value>1000</value>
                <value>2000</value>
                <value>3000</value>
            </array>
        </constructor-arg>
    </bean>

</beans>