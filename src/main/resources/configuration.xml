<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="myLogger" class="dev.mj.springtutorial.implementations.LoggerImpl">
        <property name="name" value="MyLogger"/>
        <property name="version" value="1"/>
    </bean>

    <bean id="usersRepository" class="dev.mj.springtutorial.implementations.UsersRepositoryImpl">
        <constructor-arg ref="myLogger"/>
        <constructor-arg value="http://localhost:4356/repo"/>
    </bean>

    <bean id="someBean" class="dev.mj.springtutorial.implementations.SomeBean" >
        <constructor-arg type="java.lang.String" value="50"/>
        <constructor-arg value="100"/>
    </bean>

</beans>